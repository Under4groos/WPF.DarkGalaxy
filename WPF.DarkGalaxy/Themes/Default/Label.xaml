<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style x:Key="Label.base" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{DynamicResource label.color.base}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Content" Value="null"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>
    
    <Style BasedOn="{StaticResource Label.base}" TargetType="{x:Type Label}"/>
    
    
    <Style x:Key="Label.Enabled"  BasedOn="{StaticResource Label.base}" TargetType="{x:Type Label}">
        <Setter Property="Foreground" Value="{DynamicResource label.color.Enabled}"/>
    </Style>
    <Style x:Key="Label.base.fs.16"  BasedOn="{StaticResource Label.base}" TargetType="{x:Type Label}">
        <Setter Property="FontSize" Value="16"/>
    </Style>
</ResourceDictionary>